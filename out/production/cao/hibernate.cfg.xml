<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- 基础设置 -->
		<property name="connection.username">root</property>
		<property name="connection.password">123456</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql:///hibernate?useUnicode=true</property>

		<!-- 配置hibernate数据库方言 -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- 是否把Hibernate运行时的SQL语句输入到控制台 -->
		<property name="show_sql">true</property>

		<!-- 输出到控制台的语句是否排版 -->
		<property name="format_sql">true</property>

		<!-- 增加数据库名前缀 -->
		<property name="default_schema">hibernate</property>
		<!-- 可以帮助由java代码生成数据库脚本 create|update|create-drop|validate -->
		<property name="hbm2ddl.auto">update</property>

		<!-- 配置CurrentSession需要的 -->
		<property name="hibernate.current_session_context_class">thread</property>
		
		 
		<!--<mapping resource="PageBean.hbm.xml" /> -->
		<mapping resource="StudentBean.hbm.xml" />
		<!--<mapping resource="AddressBean.hbm.xml" />  -->
	</session-factory>
</hibernate-configuration>
